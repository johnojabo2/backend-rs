{
  "compilerOptions": {
    "target": "es2018",
    "sourceMap": true,
    "outDir": "dist",
    "module": "commonjs",
    "rootDir": "./src",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
  "typeRoots": ["node_modules/@types", "./@types"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
